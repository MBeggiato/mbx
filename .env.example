# Mbx Homepage Environment Variables
# Copy this file to .env.local for development or .env.production for production

# Application Settings
APP_PORT=3000
NODE_ENV=development

# Database Configuration
POSTGRES_DB=mbx_homepage
POSTGRES_USER=mbx_user
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_PORT=5432
DATABASE_URL=postgresql://mbx_user:your_secure_password_here@localhost:5432/mbx_homepage

# pgAdmin Configuration (Optional)
PGADMIN_DEFAULT_EMAIL=admin@your-domain.com
PGADMIN_DEFAULT_PASSWORD=your_secure_admin_password
PGADMIN_PORT=5050

# Application Configuration
NEXT_PUBLIC_APP_NAME="Mbx Homepage"
NEXT_PUBLIC_APP_VERSION="1.0.0"

# Domain Configuration (for SSL in production)
DOMAIN=your-domain.com
SSL_EMAIL=your-email@your-domain.com

# Development Settings
# Uncomment for development debugging
# DEBUG=true
# VERBOSE_LOGGING=true

# Content Moderation (Optional - for future AI integration)
# OPENAI_API_KEY=your_openai_api_key_here
# CONTENT_MODERATION_ENABLED=true
